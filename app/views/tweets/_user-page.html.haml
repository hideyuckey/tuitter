.home
  .header
    .text
      = @user.username
  .time-line
    .user-profile
      .user-profile__image
        = @user.image
      .user-profile__icon
        = @user.icon
      .user-profile__edit
        = link_to '' do
          プロフィールを編集
      .user-profile__name
        = @user.username
      .user-profile__text
        - if @user.text?
          = @user.text
        - else
          紹介文は設定されていません


    .tweet-list
      - tweets.each do |tweet|
        .tweet
          .tweet__icon
          .tweet__content
            .upper
              .user-name
                = tweet.user.username
              .time
                = tweet.created_at.strftime("%Y/%m/%d %H:%M")
            .text
              = simple_format(tweet.message)
            .image
              = image_tag(tweet.image.url) if tweet.image?
            .button
              %li
                .icon
                  = icon('far', 'comment')
                .count
                  1
              %li
                .icon
                  =icon('fas', 'retweet')
                .count
                  2
              %li
                .icon
                  = icon('far', 'heart')
                .count
                  3
              %li
                .icon
                  = icon('far', 'envelope-open')