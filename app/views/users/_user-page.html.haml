.home
  .header
    .text
      = @user.username
  .time-line
    .user-profile
      .user-profile__image
        = image_tag(@user.image.url) if @user.image?
      .user-profile__icon
        = image_tag(@user.icon.thumb.url) if @user.icon?
      .user-profile__edit
        - if @user.id == current_user.id
          = link_to '', class: "show-user-edit" do
            プロフィールを編集
      .user-profile__name
        = @user.username
      .user-profile__text
        - if @user.text?
          = simple_format(@user.text)
        - else
          紹介文は設定されていません

    .content
      = render "tweets/tweet-list", {tweets: @tweets}